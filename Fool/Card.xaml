<Window x:Class="Fool.Card"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fool"
        mc:Ignorable="d"
        Topmost ="True"
        Title="Ваша карта" Height="199" Width="151" ResizeMode="NoResize" Cursor="Hand" ShowInTaskbar="False">
    <Grid>
        <Label x:Name="number" Content="K&#xD;&#xA;" HorizontalAlignment="Left" Margin="5,0,0,0" VerticalAlignment="Top" Height="44" FontFamily="Arial Black" FontSize="24"/>
        <Label  x:Name="number1" Content="K&#xA;" Margin="94,121,0,0" FontFamily="Arial Black" FontSize="22" HorizontalAlignment="Left" Width="100" Height="94" VerticalAlignment="Top"/>
        <Label  x:Name="mast_label" Content="+&#xA;" HorizontalAlignment="Left" VerticalAlignment="Top" Width="95" Height="74" Background="#00000000" FontSize="48" FontFamily="Arial Black" Margin="40,42,0,0"/>
        <Button x:Name="button"  Content="Button" HorizontalAlignment="Center" Margin="0,-34,0,0" VerticalAlignment="Top" Background="#48FFFFFF" Foreground="{x:Null}" BorderBrush="#05FFFFFF" OpacityMask="#7AFFFFFF" Height="254" Width="359" Click="Button_Click"/>

    </Grid>
</Window>
